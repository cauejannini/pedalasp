<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1"
              tools:context=".Fragments.PlaceInfoF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:background="@color/app_blue">

        <TextView
            android:id="@+id/tv_add_place_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_place"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:background="@color/water_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione os serviÃ§os oferecidos:"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"/>

        <ListView
            android:id="@+id/list_services"
            android:layout_width="match_parent"
            android:choiceMode="multipleChoice"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outra:"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/et_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bt_water_blue"
        android:text="ADICIONAR"/>

</LinearLayout>