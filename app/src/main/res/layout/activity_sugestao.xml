<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:background="#444444"
    tools:context=".SugestaoActivity" >

    <LinearLayout
		android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingBottom="15dp"
	    android:paddingLeft="0dp"
	    android:paddingRight="0dp"
	    android:paddingTop="15dp"
	    android:background="#FFFFFF">
	    
	    <EditText
	        android:id="@+id/nome"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/seu_nome"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        />
	    
	    <EditText
	        android:id="@+id/email"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:inputType="textEmailAddress"
	        android:hint="@string/seu_email"
	        />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:layout_marginTop="30dp"
	        android:layout_marginBottom="30dp"
	        android:padding="15dp">
		    <EditText
		        android:id="@+id/mensagem"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="15dp"
	       	 	android:layout_marginRight="15dp"
		        android:hint="@string/texto_do_email"
		        />
	    </LinearLayout>
	    
	    <Button
	        android:id="@+id/enviar_sugestao"
	        android:layout_height="60dp" 
	        android:layout_width="match_parent"
	        android:layout_marginBottom="15dp"
	        android:layout_marginLeft="15dp"
	       	android:layout_marginRight="15dp"
	        android:background="@drawable/locationblue_box_shadow_corner"
	        android:text="@string/enviar_email"
			android:textColor="#FFF"
	        android:textAllCaps="true"
	        android:onClick="sendEmail"
	        />
    
    </LinearLayout>
    
</LinearLayout>
