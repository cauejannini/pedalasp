<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".DrawerExpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:background="@color/grey_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_bg">

            <TextView
                android:id="@+id/tv_drawer_exp_splash_1"
                android:text="@string/drawerexp_explanation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textColor="#EEE"/>

            <TextView
                android:id="@+id/tv_drawer_exp_splash_2"
                android:text="@string/drawerexp_explanation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:textSize="12sp"
                android:textColor="#CEEE"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:background="#666">

        <ListView
            android:id="@+id/list_drawer_exp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:padding="0dp"
            android:gravity="center"
            android:divider="#666"
            android:layout_gravity="center_horizontal"
            android:dividerHeight="0dp"
            android:fadeScrollbars="false"
            android:background="@color/grey_bg">
        </ListView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:text="@string/ir_para_mapa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFF"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:background="@color/location_blue"
        android:onClick="finishExp"/>

</LinearLayout>