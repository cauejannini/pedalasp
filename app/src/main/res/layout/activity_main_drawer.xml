<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

	    <fragment
        	android:id="@+id/map"
        	class="com.google.android.gms.maps.SupportMapFragment"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"/>

	    <LinearLayout
			android:id="@+id/header"
            android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="top|center_horizontal"
	        android:paddingTop="3dp"
			android:paddingLeft="3dp"
			android:paddingBottom="5dp"
			android:paddingRight="5dp"
	        android:layout_margin="11dp"
	        android:layout_alignParentTop="true"
	        android:orientation="horizontal"
	        android:background="@drawable/box_border_corner"
			android:layout_gravity="center_vertical"
	        android:weightSum="1"/>

		<LinearLayout
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:layout_alignParentBottom="true"
	          android:orientation="vertical">

		      <RelativeLayout
		          	android:id="@+id/bottom_buttons"
		            android:layout_height="220dp"
			        android:layout_width="match_parent">
				    
					<Button
						android:id="@+id/push_drawer"
						android:layout_alignParentLeft="true"
						android:layout_alignParentBottom="true"
						android:layout_width="45dp"
						android:layout_height="50dp"
						android:background="@drawable/pull_tab"
						android:translationX="-20dp"
						android:textColor="#666666"
						android:paddingRight="10dp"
						android:elevation="3dp"
						android:layout_marginBottom="56dp"
						android:onClick="openDrawer"
						/>

					<ToggleButton
						android:id="@+id/route_bt"
						android:layout_alignParentRight="true"
						android:layout_alignParentBottom="true"
						android:layout_marginRight="11dp"
						android:layout_marginBottom="164dp"
						android:layout_width="55dp"
						android:layout_height="55dp"
						android:background="@drawable/route_button"
						android:textOff=""
						android:textOn=""
						android:onClick="onRouteButtonClick"
						android:translationX="0dp"
						/>

					<Button
						 android:id="@+id/report"
						 android:layout_alignParentRight="true"
						 android:layout_alignParentBottom="true"
						 android:layout_marginRight="11dp"
						 android:layout_marginBottom="95dp"
						 android:layout_width="55dp"
						 android:layout_height="55dp"
						 android:background="@drawable/report_button"
						 android:onClick="openReport"
						/>
			            
				    <Button
			            android:id="@+id/my_location"
			            android:layout_alignRight="@id/report"
			            android:layout_alignLeft="@id/report"
			            android:layout_alignParentBottom="true"
			            android:layout_marginBottom="26dp"
			            android:layout_width="55dp"
			            android:layout_height="55dp"
			            android:background="@drawable/set_my_location"
			            android:onClick="findMe"
			            />
				    
				   	<Button
			            android:id="@+id/notify_solved"
			            android:layout_alignParentBottom="true"
			            android:layout_centerHorizontal="true"
			            android:layout_marginBottom="56dp"
			            android:layout_width="200dp"
			            android:textSize="14sp"
			            android:layout_height="45dp"
			            android:textColor="#FFFFFF"
			            android:text="@string/notifySolved"
			            android:background="@drawable/bt_blue_border"
			            android:onClick="notifySolved"
			            android:translationY="600dp"
			            android:visibility="gone"
			            />
			            
			    </RelativeLayout>
			    
		      	<android.support.v4.view.ViewPager
		          	android:id="@+id/route_panel"
		          	android:layout_height="98dp"
			      	android:layout_width="match_parent"
					android:paddingTop="3dp"
					android:paddingBottom="0dp"
			      	android:translationY="600dp"
					android:background="@drawable/viewpager_box_border"
			      	android:visibility="gone"/>
		      	
			</LinearLayout>
	    	
    	<!--WEBVIEW TO CONNECT WITH RUNKEEPER
		  <WebView
	        android:id="@+id/webView"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:visibility="gone"/>  -->
	        
	 </RelativeLayout>

	<ListView
        android:id="@+id/left_drawer"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:padding="0dp"
        android:layout_gravity="start"
        android:divider="#00000000"
        android:dividerHeight="3dp"
        android:background="#AA222222">
	</ListView>

</android.support.v4.widget.DrawerLayout>

