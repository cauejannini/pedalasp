<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_place_panel_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="150dp"
                android:layout_alignParentTop="true"
                android:visibility="invisible">

    <LinearLayout
        android:id="@+id/ll_place_details_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/box_white_shadow_top"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_place_logo_v"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingTop="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/mapic_place_standart_v"/>

            <RelativeLayout
                android:id="@+id/rl_place_panel_close"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_transparent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_x"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_place_open_details"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_transparent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_arrow"/>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_place_name_v"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:textColor="@color/dark_text"/>

        <ImageView
            android:id="@+id/iv_place_services_v"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>

        <TextView
            android:id="@+id/tv_place_services_v"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textSize="12sp"
            android:maxLines="2"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/light_text"/>

