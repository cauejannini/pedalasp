<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_place_panel_v"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:layout_alignParentTop="true"
                android:visibility="visible">

    <LinearLayout
        android:id="@+id/ll_place_details_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/box_white_shadow_top"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_bottom_panel_horizontal"
        android:paddingEnd="@dimen/padding_bottom_panel_horizontal"
        android:paddingBottom="@dimen/padding_bottom_panel_vertical"
        android:paddingTop="@dimen/padding_bottom_panel_horizontal"
        android:gravity="start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/iv_place_logo_v"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_place_name_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_place_logo_v"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:maxLines="1"
                android:textColor="@color/dark_text"/>

            <RelativeLayout
                android:id="@+id/rl_place_open_details"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/bt_transparent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_arrow"
                    android:backgroundTint="@color/app_blue"/>

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_place_services_v"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_place_services_v"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_bottom_panel_small"
            android:maxLines="1"
            android:textColor="@color/light_text"/>

        <TextView
            android:id="@+id/tv_place_short_desc_v"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_bottom_panel"
            android:maxLines="2"
            android:text="Jns Jscjnsj Ncsjns Scsjancna Wjncl Jancalcn Vlcn Ssacnas Fcsajc Hjkj Jsbckabcaskjcba Ssk Rjcbac"
            android:textColor="@color/dark_text"/>

        <TextView
            android:id="@+id/tv_place_rating"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="@dimen/text_size_bottom_panel"
            android:textColor="@color/yellow"
            android:text="4,5 estrelas - Avaliar"/>

