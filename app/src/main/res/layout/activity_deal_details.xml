<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_featured_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jannini.android.ciclosp.DealDetailsActivity">

    <RelativeLayout
        android:id="@+id/rl_back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bt_transparent">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_arrow_back"
            android:backgroundTint="@color/dark_text"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_deal_details_loading"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ll_deal_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start|top"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_deal_title"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/dark_text"
            android:textSize="22sp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/yellow"/>

        <TextView
            android:id="@+id/tv_deal_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="18sp"
            android:textColor="@color/dark_text"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp"/>

        <!--<View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/water_blue"/>
-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/app_blue"
                android:background="@drawable/ic_estabelecimento"/>

            <TextView
                android:id="@+id/tv_deal_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_text"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_deal_place_services"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:tint="@color/app_blue"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tv_deal_place_services"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="12sp"
            android:textColor="@color/dark_text"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tv_deal_place_current_open_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textColor="@color/app_green"/>

        <LinearLayout
            android:id="@+id/ll_get_voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="40dp"
            android:gravity="center"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/bt_yellow_round">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/get_deal"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deal_place_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:background="@drawable/bt_transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/water_blue"
                android:background="@drawable/ic_phone"/>

            <TextView
                android:id="@+id/tv_deal_place_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deal_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:gravity="center_vertical"
            android:background="@drawable/bt_transparent"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/btic_route"/>

            <TextView
                android:id="@+id/tv_deal_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_text"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
