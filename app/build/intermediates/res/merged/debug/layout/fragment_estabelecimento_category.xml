<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".Fragments.EstabelecimentoInfoF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:background="@color/app_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar loja ou serviço"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:background="@color/water_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione as categorias:"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"/>

        <ToggleButton
            android:id="@+id/tb_store"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="80dp"
            android:gravity="center_vertical"
            android:textOn="Loja de bicicletas e acessórios"
            android:textOff="Loja de bicicletas e acessórios"
            android:background="@drawable/bt_toggle_store"/>

        <ToggleButton
            android:id="@+id/tb_workshop"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="80dp"
            android:gravity="center_vertical"
            android:textOn="Oficina"
            android:textOff="Oficina"
            android:background="@drawable/bt_toggle_workshop"/>

        <ToggleButton
            android:id="@+id/tb_shower"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="80dp"
            android:gravity="center_vertical"
            android:textOn="Banho"
            android:textOff="Banho"
            android:background="@drawable/bt_toggle_shower"/>

        <ToggleButton
            android:id="@+id/tb_coffee"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="80dp"
            android:gravity="center_vertical"
            android:textOn="Café"
            android:textOff="Café"
            android:background="@drawable/bt_toggle_coffee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outra:"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/et_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bt_lightblue"
        android:text="ADICIONAR"/>

</LinearLayout>
