<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="20dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/cor_ciclovia"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="Vias permanentes"
                android:textColor="@color/dark_text"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Ciclovias e ciclofaixas"
                android:textSize="12sp"
                android:textColor="@color/dark_text"
                />

        </LinearLayout>

        <ToggleButton
            android:id="@+id/tb_bikelanes_permanentes"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bt_toggle"
            android:textOn=""
            android:textOff=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="20dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/cor_ciclofaixa"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="Ciclofaixas de Lazer"
                android:textColor="@color/dark_text"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Domingos e feriados nacionais"
                android:textSize="12sp"
                android:textColor="@color/dark_text"
                />

        </LinearLayout>

        <ToggleButton
            android:id="@+id/tb_bikelanes_lazer"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bt_toggle"
            android:textOn=""
            android:textOff=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="20dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/cor_ciclorrota"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="Ciclorrotas"
                android:textColor="@color/dark_text"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Ruas preferenciais"
                android:textSize="12sp"
                android:textColor="@color/dark_text"
                />

        </LinearLayout>

        <ToggleButton
            android:id="@+id/tb_bikelanes_preferenciais"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bt_toggle"
            android:textOn=""
            android:textOff=""/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_bikelanes_ok"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bt_lightblue"
        android:text="OK"/>

</LinearLayout>